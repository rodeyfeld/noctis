# Noctis Configuration
# Copy to .env: cp example.env .env

# =============================================================================
# Prefect Server Database (internal metadata store)
# =============================================================================
PREFECT_DB_USER=prefect
PREFECT_DB_PASSWORD=prefect
PREFECT_DB_NAME=prefect

# =============================================================================
# Atlas Database (PostgreSQL/PostGIS - Augur data)
# =============================================================================
ATLAS_DB_HOST=atlas-postgres
ATLAS_DB_PORT=5432
ATLAS_DB_NAME=augur
ATLAS_DB_USER=atlas_user
ATLAS_DB_PASSWORD=atlas_password

# =============================================================================
# Augur API
# =============================================================================
NOCTIS_AUGUR_API_URL=http://augur:8000
